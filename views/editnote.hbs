<div class="card shadow col-3 text-center mx-auto">
	<div class="card-title">
		<h2>Edit Note</h2>
	</div>
	<div class="card-body">
		<form action="/edit/{{note._id}}?_method=PUT" method="POST">
			<div class="form-group">
				<input type="hidden" name="_method" value="PUT">
				<input type="text" name="title" class="form-control" placeholder="title" value="{{note.title}}">
			</div>
			<div class="form-group">
				<textarea name="content" class="form-control" placeholder="add a description here">{{note.content}}</textarea>
			</div>
			<button type="submit" class="btn btn-primary btn-block">Save</button>
		</form>
	</div>
</div>